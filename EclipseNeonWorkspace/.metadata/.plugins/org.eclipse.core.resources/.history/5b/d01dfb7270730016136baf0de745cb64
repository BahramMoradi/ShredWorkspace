		while(itr.hasNext()){
			String line=itr.next();
			String ftmCPR=line.substring(startIndex, startIndex+11);
			ftmCprList.add(ftmCPR);
		}
		
		for(String cpr: ftmCprList){
			if(!brevCprList.contains(cpr)){
				System.out.println("brev.txt inholder ikke CPR :"+cpr);
			}
		}
		
		
		/**
		while(itr.hasNext()){
